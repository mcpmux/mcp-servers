  "icon": "https://avatars.githubusercontent.com/u/2565372?v=4",
  "schema_version": "2.1",
  "categories": [
    "productivity"
  ],
  "tags": [
    "todoist",
    "tasks",
    "todo",
    "project-management",
    "productivity"
