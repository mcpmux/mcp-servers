{
  "$schema": "../schemas/server-definition.schema.json",
  "id": "com.stripe-mcp",
  "name": "Stripe",
  "alias": "stripe",
  "description": "Interact with Stripe APIs to manage payments, customers, subscriptions, invoices, and more.",
  "icon": "\ud83d\udcb3",
  "schema_version": "2.1",
  "categories": ["developer-tools"],
  "tags": ["stripe", "payments", "billing", "subscriptions", "invoices", "fintech"],

  "transport": {
    "type": "stdio",
    "command": "npx",
    "args": ["-y", "@stripe/mcp"],
    "env": {
      "STRIPE_API_KEY": "${input:STRIPE_API_KEY}"
    },
    "metadata": {
      "inputs": [
        {
          "id": "STRIPE_API_KEY",
          "label": "Stripe API Key",
          "description": "Secret key used to authenticate with the Stripe API",
          "type": "password",
          "required": true,
          "secret": true,
          "placeholder": "sk_live_...",
          "obtain": {
            "url": "https://dashboard.stripe.com/apikeys",
            "instructions": "1. Go to the Stripe Dashboard\n2. Navigate to Developers > API keys\n3. Copy the Secret key (starts with sk_live_ or sk_test_)",
            "button_label": "Get API Key"
          }
        }
      ]
    }
  },

  "auth": {
    "type": "api_key",
    "instructions": "Get your secret API key from https://dashboard.stripe.com/apikeys"
  },

  "contributor": {
    "name": "Stripe",
    "github": "stripe",
    "url": "https://stripe.com"
  },

  "links": {
    "repository": "https://github.com/stripe/mcp",
    "homepage": "https://stripe.com",
    "documentation": "https://docs.stripe.com"
  },

  "platforms": ["all"],

  "capabilities": {
    "tools": true,
    "resources": true,
    "prompts": false,
    "read_only_mode": false
  }
}
