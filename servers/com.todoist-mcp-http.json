  "contributor": {
    "name": "Doist",
    "github": "Doist",
    "url": "https://todoist.com"
  },

  "links": {
    "repository": "https://github.com/Doist/todoist-ai",
    "homepage": "https://todoist.com",
    "documentation": "https://developer.todoist.com"
  },

  "platforms": [
    "all"
  ],

  "capabilities": {
    "tools": true,
    "resources": false,
    "prompts": false,
    "read_only_mode": false
  }
