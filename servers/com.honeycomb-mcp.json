  "icon": "https://avatars.githubusercontent.com/u/15988027?v=4",
  "schema_version": "2.1",
  "categories": ["monitoring", "developer-tools"],
  "tags": ["honeycomb", "observability", "traces", "monitoring", "apm", "slo"],

  "transport": {
    "type": "http",
    "url": "https://mcp.honeycomb.io/mcp",
    "metadata": {
      "inputs": []
    }
